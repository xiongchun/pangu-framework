	<!-- 演示使用客户端Applet[RunAsApplet.java]调用服务器端Servlet -->
	<servlet>
		<servlet-name>myServlet</servlet-name>
		<servlet-class>org.g4studio.demo.local.appet.MyServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>myServlet</servlet-name>
		<url-pattern>/myServlet</url-pattern>
	</servlet-mapping>

	<!-- 字符编码过滤器 -->
	<filter>
		<filter-name>encodingFilter</filter-name>
		<filter-class>org.g4studio.common.util.EncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>utf-8</param-value>
		</init-param>
		<init-param>
			<param-name>enabled</param-name>
			<param-value>true</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>encodingFilter</filter-name>
		<url-pattern>*.do</url-pattern>
	</filter-mapping>

	<!-- 请求拦截过滤器 -->
	<filter>
		<filter-name>requestFilter</filter-name>
		<filter-class>org.g4studio.common.util.RequestFilter</filter-class>
		<init-param>
			<param-name>enabled</param-name>
			<param-value>true</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>requestFilter</filter-name>
		<url-pattern>*.do</url-pattern>
	</filter-mapping>

	<!-- 静态资源过滤器:提供压缩和缓存的功能  生产环境下取消注释 -->
	<filter>
		<filter-name>resourceFilter</filter-name>
		<filter-class>org.g4studio.core.resource.impl.ResourceFilter</filter-class>
		<init-param>
			<param-name>config</param-name>
			<param-value>/WEB-INF/classes/g4resource.properties</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>resourceFilter</filter-name>
		<url-pattern>*.js</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>resourceFilter</filter-name>
		<url-pattern>*.css</url-pattern>
	</filter-mapping>
    

	<!-- 系统启动监听器 -->
	<listener>
		<listener-class>org.g4studio.common.util.SystemInitListener</listener-class>
	</listener>
	<listener>
		<listener-class>org.springframework.web.util.IntrospectorCleanupListener</listener-class>
	</listener>
	<!-- 会话监听器 -->
	<listener>
		<listener-class>org.g4studio.common.util.SessionListener</listener-class>
	</listener>

	<!-- 配置ActionServlet,加载Struts配置文件 -->
	<servlet>
		<servlet-name>action</servlet-name>
		<servlet-class>org.g4studio.core.mvc.xstruts.action.ActionServlet</servlet-class>
		<init-param>
			<param-name>config</param-name>
			<param-value>/WEB-INF/struts-config.xml</param-value>
		</init-param>
		<init-param>
			<param-name>config/demo</param-name>
			<param-value>/WEB-INF/struts-config-demo.xml</param-value>
		</init-param>
		<init-param>
			<param-name>debug</param-name>
			<param-value>2</param-value>
		</init-param>
		<load-on-startup>2</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>action</servlet-name>
		<url-pattern>*.do</url-pattern>
	</servlet-mapping>

	<!-- 设置Session时长:以分钟为单位;如果是零或负数,那么会话就永远不会超时。 -->
	<session-config>
		<session-timeout>30</session-timeout>
	</session-config>

	<!-- 缺省首页 -->
	<welcome-file-list>
		<welcome-file>login.htm</welcome-file>
	</welcome-file-list>

	<!-- 404错误响应页面 -->
	<error-page>
		<error-code>404</error-code>
		<location>/common/error/404.jsp</location>
	</error-page>

	<!-- 500错误响应页面，提示：500错误平台已做了特殊处理，无需再配置。 
	<error-page>
		<error-code>500</error-code>
		<location>/common/error/500.jsp</location>
	</error-page>
	-->
</web-app>
