<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:tx="http://www.springframework.org/schema/tx"
	xsi:schemaLocation="
	http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
	http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.5.xsd
	http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-2.5.xsd">
	
	<!-- 导入数据访问对象 -->
	<import resource="classpath:config/global.dao.xml" />
	<!-- 导入业务处理对象.权限参考模型 -->
	<import resource="classpath:config/system/system.service.xml" />
	<!-- 导入业务处理对象.演示系统 -->
	<import resource="classpath:config/demo/demo.service.xml" />
	<!-- 导入业务处理对象.业务系统 -->
	<import resource="classpath:config/app/app.service.xml" />
	<!-- 导入SpringBean切面监控 -->
	<import resource="classpath:config/global.monitor.xml" />
	 
	<!-- 导入RPC客户端配置 不需要演示RPC功能则可以取消注释  Server端通过web.xml加载-->
	<import resource="classpath:rpc/webservice/client/client.xml" />
	<import resource="classpath:rpc/httpinvoker/client/client.xml" />
	
	
</beans>